{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "scripts/build.js",
        "packages/*/src/*",
        "packages/*/package.json"
      ],
      "outputs": ["*.js", "*.map"]
    },
    "types": {
      "dependsOn": ["^types"],
      "inputs": [
        "tsconfig.json",
        "packages/*/tsconfig.json",
        "packages/*/src/**/*.js",
        "packages/*/*.js"
      ],
      "outputs": ["*.d.ts", "*.d.ts.map", "tsconfig.tsbuildinfo"]
    },
    "lint": {
      "inputs": [
        "eslint.config.base.js",
        "eslint.config.js",
        "packages/*/eslint.config.js",
        "packages/*/src/**/*.js",
        "packages/**/*.js",
        "scripts/**/*.js",
        "stories/**/*.js",
        ".storybook/**/*.js"
      ]
    },
    "lint:root": {
      "inputs": [
        "eslint.config.base.js",
        "eslint.config.js",
        "scripts/**/*.js",
        "stories/**/*.js",
        ".storybook/**/*.js"
      ]
    }
  }
}
