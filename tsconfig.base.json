{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": false,
    "lib": ["DOM", "ESNext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "target": "esnext",
    "composite": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
